<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg"
    tools:context="com.example.administrator.ClothingRentalSystem.admin.houtai_admin.select_user_admininfo">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询结果"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textColor="#37302F"
        android:textSize="35sp"/>


    <EditText
        android:id="@+id/username"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/admin_user"
        android:ems="20"
        android:inputType="textPersonName"
        android:focusable="false"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/admin_user"
        android:ems="20"
        android:focusable="false"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/admin_user"
        android:ems="20"

        />

    <EditText
        android:id="@+id/sex"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/admin_user"
        android:ems="20"
         />


    <EditText
        android:id="@+id/phone"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/admin_user"
        android:ems="20"
        />

        <Button
            android:id="@+id/r_return"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:text="返      回"
            android:layout_alignBaseline="@+id/r_back"
            android:layout_alignBottom="@+id/r_back"
            android:layout_alignRight="@+id/r_password"
            android:layout_alignEnd="@+id/r_password"
            android:background="@drawable/admin_user_button"
            android:textColor="#37302F"
            android:textSize="16sp"/>

</LinearLayout>
