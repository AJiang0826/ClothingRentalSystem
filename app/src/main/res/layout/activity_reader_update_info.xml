<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg"
    tools:context="com.example.administrator.ClothingRentalSystem.admin.registerActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改个人信息"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="#37302F"
        android:textSize="30sp"/>






    <EditText
        android:id="@+id/u_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/register_edittext_sharp"
        android:ems="20"
        android:hint="请输入用户名"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/u_password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/register_edittext_sharp"
        android:ems="20"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/user_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/register_edittext_sharp"
        android:ems="10"
        android:hint="姓名"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/u_sex"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/register_edittext_sharp"
        android:hint="请输入性别"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/u_phone"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/register_edittext_sharp"
        android:hint="请输入手机号"
        android:layout_marginTop="15dp"/>




    <Button
        android:id="@+id/r_modify"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="修改"
        android:layout_alignBaseline="@+id/r_back"
        android:layout_alignBottom="@+id/r_back"
        android:layout_alignRight="@+id/r_password"
        android:layout_alignEnd="@+id/r_password"
        android:background="#a5c3d4"
        android:textSize="18sp"/>
</LinearLayout>
