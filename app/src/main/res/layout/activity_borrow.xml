<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="com.example.administrator.ClothingRentalSystem.admin.qiantai_admin.borrowActivity">

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_width="360dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/RegisterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="租衣信息详情"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="#37302F"
            android:textSize="40sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="服装编号："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ClothesId"
            android:layout_width="240dp"
            android:layout_marginRight="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/borrow_textview_sharp"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="服装名称 ："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ClothesName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borrow_textview_sharp"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="服装种类 ："
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ClothesTypes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borrow_textview_sharp"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="服装尺码 ："
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ClothesSize"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borrow_textview_sharp"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="租借价格 ："
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ClothesPrice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borrow_textview_sharp"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:text="商品图片 ："
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ClothesImg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/clothes"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/CollectClothes"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/register_button_sharp"
            android:text="收藏服装"
            android:textColor="#37302F"
            android:textSize="25sp" />

        <Button
            android:id="@+id/RentClothes"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/register_button_sharp"
            android:text="租借服装"
            android:textColor="#37302F"
            android:textSize="25sp" />

    </LinearLayout>
</LinearLayout>
