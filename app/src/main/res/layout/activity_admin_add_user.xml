<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg"
    tools:context="com.example.administrator.ClothingRentalSystem.admin.houtai_admin.admin_add_user">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/edituser_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="#fff"
        app:srcCompat="@mipmap/left_arrow" />
    </LinearLayout>
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加用户"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textColor="#37302F"
        android:textSize="35sp"/>


    <EditText
        android:id="@+id/r_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/admin_user"
        android:ems="20"
        android:hint="请输入用户名"

 />

    <EditText
        android:id="@+id/r_password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/admin_user"
        android:ems="20"
        android:hint="请输入密码"/>

    <EditText
        android:id="@+id/user_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/admin_user"
        android:ems="20"
        android:hint="请输入姓名"/>

    <EditText
        android:id="@+id/r_sex"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/admin_user"
        android:ems="20"
        android:hint="请输入性别" />


    <EditText
        android:id="@+id/r_phone"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/admin_user"
        android:ems="20"
        android:hint="请输入手机号"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
    <Button
        android:id="@+id/r_register_resetting"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="重置内容"
        android:textColor="#37302F"
        android:background="@drawable/admin_user_button"
        android:textSize="16sp" />

    <Button
        android:id="@+id/r_register"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text="确定添加"
        android:layout_alignBaseline="@+id/r_back"
        android:layout_alignBottom="@+id/r_back"
        android:layout_alignRight="@+id/r_password"
        android:layout_alignEnd="@+id/r_password"
        android:background="@drawable/admin_user_button"
        android:textColor="#37302F"
        android:textSize="16sp"/>

</LinearLayout>
</LinearLayout>
