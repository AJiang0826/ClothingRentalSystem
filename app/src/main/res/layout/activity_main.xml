<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.ClothingRentalSystem.admin.MainActivity"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical"
    android:alpha="0.8">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/head1"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="服装租借系统"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/user1" />

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageview2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@mipmap/pwd1" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="76dp"
            android:layout_height="27dp"
            android:layout_marginStart="156dp"
            android:layout_marginLeft="156dp"
            android:layout_marginTop="92dp"
            tools:srcCompat="@mipmap/user1" />

        <Switch
            android:id="@+id/musicswitch"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:text="背景音乐"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.517" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/rmber_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textColor="#37302F" />

        <CheckBox
            android:id="@+id/auto_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:text="自动登录"
            android:textColor="#37302F" />
    </LinearLayout>


    <Button
        android:id="@+id/login"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="19dp"
        android:text="登录"
        android:background="#D1EEEE"
        android:textColor="#37302F"
        android:textSize="15sp" />



    <Button
        android:id="@+id/register"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="注册"
        android:background="#D1EEEE"
        android:textColor="#37302F"
        android:textSize="15sp"
        android:layout_marginTop="26dp" />

    <Button
        android:id="@+id/admin"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="管理员登录"
        android:background="#D1EEEE"
        android:textColor="#37302F"
        android:textSize="15sp"
        android:layout_marginTop="20dp"/>



</LinearLayout>
